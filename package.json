{
	"name": "vscode-tinygo",
	"displayName": "TinyGo",
	"version": "0.5.0",
	"publisher": "tinygo",
	"description": "TinyGo support for Visual Studio Code",
	"license": "BSD-3-Clause",
	"icon": "images/tinygo-logo.png",
	"categories": [
		"Programming Languages"
	],
	"extensionDependencies": ["golang.go"],
	"repository": {
		"type": "git",
		"url": "https://github.com/tinygo-org/vscode-tinygo"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:go",
		"onWebviewPanel:vscode-tinygo.preview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-tinygo.selectTarget",
				"title": "TinyGo target"
			},
			{
				"command": "vscode-tinygo.showPreviewToSide",
				"title": "TinyGo Preview",
				"icon": "$(open-preview)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == go && tinygoHasPreview",
					"command": "vscode-tinygo.showPreviewToSide",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && make webworker.bundle.js",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^10.3.0",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2"
	}
}
